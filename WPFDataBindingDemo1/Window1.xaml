<Window x:Class="WPFDataBindingDemo1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDataBindingDemo1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="58,54,0,0" VerticalAlignment="Top" Width="647" Height="16" Minimum="1" Maximum="100" Value="12"/>
        <Label x:Name="label" Content="WPF Databinding Demo" FontSize="{Binding ElementName=slider, Path=Value}"   HorizontalAlignment="Left" Margin="34,274,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="58,96,0,0" TextWrapping="Wrap" Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
